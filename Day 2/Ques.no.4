#include<iostream>
using namespace std;
void sort(int a[], int n) 
{
   int m, temp;
   for (int i = 0; i < n - 1; i++) 
   {
      m = i;
      for (int j = i + 1; j < n; j++)
      if (a[j] < a[m])
      {
         m = j;
         temp = a[i];
         a[i] = a[m];
         a[m] = temp;
   }
}
int main() 
{
   int n;
   cout<< "enter the size of array";
   cin>> n
   int a[], int i;
   for(i=0; i<n; i++)
   { 
       cin>> a[i];
   }
   cout<<"Given array is:";
   for (i = 0; i < n; i++)
   {
       cout<< a[i] <<" ";
   }
   Sort(a, n);
   cout<< "Sorted array is: ";
   for (i = 0; i < n; i++)
   {
       cout<< a[i] <<" ";
   }
   return 0;
}
